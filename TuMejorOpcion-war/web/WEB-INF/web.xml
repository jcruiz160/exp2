<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>servlets.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>callback</servlet-name>
        <servlet-class>servlets.CallbackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>servlets.PostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>funcionalidadBonos</servlet-name>
        <servlet-class>servlets.funcionalidadBonos</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>redimirBono</servlet-name>
        <servlet-class>servlets.redimirBono</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verAmigos</servlet-name>
        <servlet-class>servlets.verAmigos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>enviarBono</servlet-name>
        <servlet-class>servlets.enviarBono</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>agregarTienda</servlet-name>
        <servlet-class>servlets.agregarTienda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verHistorial</servlet-name>
        <servlet-class>servlets.verHistorial</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>callback</servlet-name>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>funcionalidadBonos</servlet-name>
        <url-pattern>/funcionalidadBonos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redimirBono</servlet-name>
        <url-pattern>/redimirBono</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verAmigos</servlet-name>
        <url-pattern>/verAmigos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enviarBono</servlet-name>
        <url-pattern>/enviarBono</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregarTienda</servlet-name>
        <url-pattern>/agregarTienda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verHistorial</servlet-name>
        <url-pattern>/verHistorial</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <exception-type>facebook4j.FacebookException</exception-type>
        <location>/error.jsp</location>
    </error-page>

</web-app>
